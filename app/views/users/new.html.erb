<%= form_for :user, url: '/users' do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name  %><br>

    <%= f.label :password %>
    <%= f.password_field :password  %><br>

    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.password_field :password_confirmation  %><br>

    <%= f.submit "Create User" %>
<% end %>